<div class="back-section">
  <button class="back-arrow" onclick="goBack()">
    <img src="../images/back-arrow.png" alt="Go back">
  </button>
</div>
<div class="content">
  {{#if plant}}
  <img src='{{ plant.img }}' alt="typeplant image" class="plant-centered">

  <h2 class="dark-green-text">{{ plant.commonName }}</h2>
  <p class="p-small gray-text">Family: {{ plant.family }}</p>
  <hr>
  <p>{{ plant.description }}</p>

  <h4 class="green-text">Plant Details:</h4>

  <div class="col-3">
    <img src="../images/clock.png" class="plant-icon" alt="time icon">
    <p>{{ plant.lifeLength }}</p>
  </div>
  <div class="col-3">
    <img src="../images/drop.png" class="plant-icon" alt="time icon">
    <p>{{ plant.watering }}</p>
  </div>
  <div class="col-3">
    <img src="../images/ray.png" class="plant-icon" alt="time icon">
    <p>{{ plant.careDifficulty }}</p>
  </div>

  <h4 class="green-text">Care tips:</h4>
  <ul class="check-list">
    {{#each plant.careTips}}
    <li>{{ this }}</li>
    {{/each}}
  </ul>
  <div class="hash-group">
    {{#each plant.place}}
    <span class="hashtag">#{{ this }}</span>
    {{/each}}
  </div>
  {{else}}
  <div class="error-message">
    <div class="404-image">
      <img src="../images/404.png" alt="404 error">
    </div>
    <h3>Sorry, we don't have that plant yet.</h3>
    <h5>Why don't you try again?</h5>
    <div class="search-content">
      <form action="/search" method="GET">
        <svg class="search-icon" width="18" height="18" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg">
          <path
            d="M17.6574 17.6646C17.4339 17.8882 17.1545 18 16.8751 18C16.5957 18 16.3163 17.8882 16.0928 17.6646L10.6727 12.2422C9.55511 13.0248 8.21404 13.472 6.76122 13.472C3.0174 13.472 1.9265e-07 10.4534 1.9265e-07 6.70807C1.9265e-07 2.96273 3.0174 0 6.76122 0C10.4492 0 13.5224 3.01863 13.5224 6.76398C13.5224 8.21739 13.0754 9.55901 12.2931 10.677L17.7133 16.0994C18.1044 16.4907 18.1044 17.2174 17.6574 17.6646ZM11.2314 6.76398C11.2314 4.30435 9.21984 2.29193 6.76122 2.29193C4.30259 2.29193 2.29099 4.30435 2.29099 6.76398C2.29099 9.2236 4.30259 11.236 6.76122 11.236C9.21984 11.236 11.2314 9.2236 11.2314 6.76398Z"
            fill="#CCCED0" />
        </svg>
        <input type="search" results="5" name="q" class="searchInput" placeholder="Type a plant" required>
        {{!-- <button type="submit" class="btn">SEARCH</button> --}}
      </form>
    </div>
    {{/if}}
  </div>