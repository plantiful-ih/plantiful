<div id="container-center">
  <h1 class="h2-color">Edit your profile</h1>
  <form action="/profile/edit" method="POST">
    <div class="form-group">
      <img src="{{user.image}}" alt="{{user.name}}">
      <p class="subtitle">Change your current photo</p>
      <br>
      <input type="file">
    </div><br />
    <div class="form-group">
      <label class="email-password" for="username">Username:</label>
      {{#if user.userName}}
      <input type="text" name="username" placeholder="{{user.userName}}" value="{{user.userName}}">
      {{else}}
      <input type="text" name="username" placeholder="My username">
      {{/if}}
    </div><br />
    <div class="form-group">
      <label class="email-password" for="mail">E-mail:</label>
      <input type="text" name="mail" placeholder="{{ user.userEmail }}" value="{{user.userEmail}}">
    </div><br />
    <div class="form-group">
      <label class="email-password" for="age">Age:</label>
      {{#if user.age}}
      <input type="number" name="age" placeholder="{{user.age}}">
      {{else}}
      <input type="number" name="age" placeholder="My age">
      {{/if}}
    </div><br />
    <div class="form-group">
      <label class="email-password" for="location">Location:</label>
      {{#if user.location}}
      <input type="text" name="location" placeholder="{{#each user.location}}{{this}}{{/each}}">
      {{else}}
      <input type="text" name="location" placeholder="My location">
      {{/if}}
    </div><br />
    <div class="form-group">
      <label for="plants">Plants:</label>
      {{#if user.plants}}
      {{#each}}
      <li name="plants">{{this}}</li>
      {{/each}}
      {{else}}
      <p>You don't have any plant, why don't you start now?</p>
      <br>
      <a href="/">Go to the catalogue</a>
      {{/if}}
    </div><br />
    <button type="submit" class="btn">Update</button>
    <a href="/profile/edit"><button type="submit" class="btn-outlined">Cancel</button></a>
  </form>
</div>